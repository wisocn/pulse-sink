<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <!-- ChangeSet to create the table -->
    <changeSet id="create-universal-analytics-table" author="vid">
        <createTable tableName="universal_log">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ingested_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="source" type="VARCHAR(255)"/>
            <column name="level" type="VARCHAR(50)"/>
            <column name="client_id" type="UUID"/>
            <column name="customer_id" type="UUID"/>
            <column name="data" type="jsonb"/>
        </createTable>
    </changeSet>


</databaseChangeLog>
